<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lambda.web.mappers.MovieMapper">
    <insert
            id="insertMovie"
            parameterType="com.lambda.web.MovieEntity.MovieDTO">
            insert seq, title, rank_date into movie
            values (#{seq},#{title},#{rankDate})
        <selectKey resultType="int" keyProperty="movie_seq" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>

    </insert>

    <update
            id="updateMovie"
            parameterType="com.lambda.web.MovieEntity.MovieDTO">
        update set title = #{title} from movie
        where no
    </update>

    <delete
            id="deleteMovie"
            parameterType="com.lambda.web.MovieEntity.MovieDTO">
        delete from movie no
    </delete>

    <select id="selectMovies" resultType="com.lambda.web.MovieEntity.MovieDTO"
            parameterType="com.lambda.web.proxy.Pager">
  select no, seq, title, rank_date rankDate
  from movie
  <if test="searchWord !=null">
      where title like '%${searchWord}%'
  </if>
  limit #{rowStart}, #{pageSize}
  </select>
    <select id="selectMovie" resultType="com.lambda.web.MovieEntity.MovieDTO"
    parameterType="String">
  select no, seq, title, rank_date rankDate
  from movie
  where no = #{searchWord}</select>
    <select id="count" resultType="int">
  select count(*)
      from movie</select>

    <select id="switchMovie" parameterType="com.lambda.web.MovieEntity.MovieDTO"
            resultType="com.lambda.web.MovieEntity.MovieDTO">
        select no, seq, title, rank_date rankDate
        From movie where title like '%${searchWord}%'
        <choose>
            <when test="title != null">
                AND title like #{title}
            </when>
            <when test="ost != null and ost.seq != null">
                AND ost like #{ost.seq}
            </when>
            <otherwise>
                AND rank_date like '${rankDate}'
            </otherwise>
        </choose>
    </select>
    <update id="updateMovie" parameterType="com.lambda.web.MovieEntity.MovieDTO">
        update Movie
        <set>
            <if test="seq != null">seq=#{seq},</if>
            <if test="title != null">title=#{title},</if>
            <if test="rank_date != null">rank_date=#{rankDate},</if>
        </set>
        where no like ${no}
    </update>
